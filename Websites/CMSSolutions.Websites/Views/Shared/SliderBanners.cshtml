@model CMSSolutions.Websites.Models.DataViewerModel

<div id="mainSlider" style="position: relative; margin: 0 auto; top: 0px; left: 0px; width: 1366px; height:587px; overflow: hidden; visibility: hidden;">
    <div data-u="loading" style="position: absolute; top: 0px; left: 0px;">
        <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block; top: 0px; left: 0px; width: 100%; height: 100%;"></div>
        <div style="position:absolute;display:block;background:url('/Media/Default/Themes/loading.gif') no-repeat center center;top:0px;left:0px;width:100%;height:100%;"></div>
    </div>
    <div data-u="slides" style="cursor: default; position: relative; top: 0px; left: 0px; width: 1366px; height:587px; overflow: hidden;">
        @if (Model.ListBannerImages != null && Model.ListBannerImages.Count > 0)
        {
            foreach (var slider in Model.ListBannerImages)
            {
                <div data-p="225.00" style="display: none;">
                    <img class="img-responsive" src="@slider.ImageUrl" />
                    <div class="text-center inside">
                        @if (!string.IsNullOrEmpty(slider.Title))
                        {
                            <h2>@slider.Title</h2>
                        }
                        @if (!string.IsNullOrEmpty(slider.Caption))
                        {
                            <p>
                                @Html.Raw(slider.Caption)
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(slider.Url))
                        {
                            <div class="btn-custom">
                                <a href="@slider.Url">@Model.Settings.TextExplore</a>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
    <div data-u="navigator" class="jssor-circle" style="bottom:16px;right:16px;" data-autocenter="1">
        <div data-u="prototype" style="width:16px;height:16px;"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        window.initSliderOption("mainSlider");
    });
</script>